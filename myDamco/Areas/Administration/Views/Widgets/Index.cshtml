@model IEnumerable<myDamco.Database.Widget>

@{
    ViewBag.Title = "Widgets";
}

<style>
td 
{
    vertical-align: top;
}
</style>
<div class="create-new-wrapper">@Html.ActionLink("Create New", "Create", null, new { @class = "createnew"})</div>
<table>
    <tr>
        <th>
            
        </th>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th>
            Category
        </th>
        <th>
            Disabled
        </th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Disabled)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
        <td>
            @Html.ActionLink("Export", "Export", new { id = item.Id })
        </td>
    </tr>
}

</table>

<h3>Import widget</h3>
<p>
    @using (Html.BeginForm("Import", "Widgets", FormMethod.Post, new {enctype = "multipart/form-data"}))
    {
        <input type='file' name='file' />
        <input type="submit" value='Import' />
    }
</p>
