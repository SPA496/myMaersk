@model myDamco.Areas.MySupplyChainAssistantAdministration.Models.Function

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Function</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.name</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.description</div>

    <div class="display-label">URL format</div>
    <div class="display-field">@Model.urlFormat</div>

    <div class="display-label">Fallback URL</div>
    <div class="display-field">@Model.fallbackUrl</div>

    <div class="display-label">Protocol</div>
    <div class="display-field">@Model.protocol</div>

    <div class="display-label">Host</div>
    <div class="display-field">@Model.host</div>

    <div class="display-label">Port</div>
    <div class="display-field">@Model.port</div>

    <div class="display-label">Path</div>
    <div class="display-field">@Model.path</div>

    <div class="display-label">Arguments</div>
    <div class="display-field">@Html.DisplayTextFor(_ => Model.arguments).ToString()</div>

    <div class="display-label">References</div>
    <div class="display-field">@(Model.references == null ? "None" : Model.references.Count.ToString())</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


